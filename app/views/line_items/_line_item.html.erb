<% if line_item == @current_item %>
<tr id="current_item" >
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.event.title %></td>
  <td class="item_price" ><%= number_to_currency(line_item.total_price) %></td>
</tr>
<tr>
  <td colspan="3"><%= button_to 'Remove ticket(s)', line_item, :method => :delete, :confirm => 'Are you sure?' %></td>
</tr>
